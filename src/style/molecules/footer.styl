@keyframes stretch-jump
    0%
        transform: scale(1)

    50%
        transform: scale(1, 1.2)

    0%
        transform: scale(1)

.main-footer
    position: fixed
    bottom: 0
    right: 0
    width: rem(65)
    margin: sizing-LG

    &__cactus
        margin-bottom: -10%
        padding-left: 10%
        transform: scale(1)
        transform-origin: bottom center

        &:hover
            animation: stretch-jump 0.3s ease-in 1